{
    "compilerOptions": {
        "target": "ESNext",
        "module": "CommonJS",
        "outDir": "./build",
        "rootDir": "./",
        "strict": true,
        "resolveJsonModule": true,
        "strictNullChecks": false,
        "esModuleInterop": true,
        "moduleResolution": "Node",
        "declaration": false,
        "skipLibCheck": false,
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,
        "removeComments": true
    },
    "include": [
        "./src/**/*.ts"
    ],
    "exclude": [
        "node_modules"
    ]
}
